@page
@using Pages 
@model Pages.ChiTietKhoHangModel
@{
    ViewData["Title"] = "Kho";
}

<div>
    <div class="row table_header mb-2">
        <p class="col-sm-3 mb-2 text-start fw-bold">Thông tin kho hàng</p>
        <div class="col-sm-9 mb-2 text-start text-sm-end d-inline-block">
            <form method="get">
                <div class="input-group mb-3">
                    <label for="search" class="input-group-text"><i class="fa fa-search"></i></label>
                    <input placeholder="Nhập từ khóa" type="text" id="search" name="search" value="@Model.sKeyword" maxlength="30" class="form-control" />
                    <button type="submit" value="Tìm kiếm" class="btn btn-sm btn-primary text-light">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center table_section">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên mặt hàng</th>
                    <th>Số lượng</th>
                    <th>Ngày sản xuất</th>
                    <th>Hạn dùng</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DSkho != null && Model.DSkho.Length > 0)
                {
                    int j = Model.noStart - 1;
                    for (int i = Model.noStart; i <= Model.noEnd; i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@Model.DSkho[j].TenMatHang</td>
                            <td>@Model.DSkho[j].SoLuong</td>
                            <td>@Model.DSkho[j].NgaySanXuat</td>
                            <td>@Model.DSkho[j].HanDung</td>
                        </tr>
                        j++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center fw-bold">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row table_pagination">
        @if (Model.DSkho != null && Model.DSkho.Length > 0)
        {
            <div class="col-9">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= Model.pageTotal; i++)
                        {
                            if (i == Model.pageIndex)
                            {
                                <li class="page-item active"><a class="page-link" href="KhoHang/ChiTietKhoHang?search=@Model.sKeyword&page=@i">@i</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="KhoHang/ChiTietKhoHang?search=@Model.sKeyword&page=@i">@i</a></li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
