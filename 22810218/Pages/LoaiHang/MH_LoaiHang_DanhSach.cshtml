@page
@model Pages.MH_LoaiHang_DanhSachModel
@{
    ViewData["Title"] = Model.ViewDataTitle;
}

<div>
    <div class="row table_header mb-2">
        <p class="col-sm-3 mb-2 text-start fw-bold">Loại Hàng</p>
        <div class="col-sm-6 mb-2 text-start text-sm-center d-inline-block">
            <form method="get">
                <div class="input-group mb-3">
                    <input type="text" id="search" name="search" value="@Model.SKeyword" maxlength="30" placeholder="Nhập từ khóa" class="form-control" />
                    <button type="submit" value="Tìm kiếm" class="btn btn-sm btn-primary text-light">Tìm kiếm</button>
                </div>
            </form>
        </div>
        <div class="col-sm-3 mb-2 text-start text-sm-end">
            <a class="btn btn-sm btn-success text-light" href="/LoaiHang/MH_LoaiHang_Them" role="button">Thêm Mới</a>
        </div>
    </div>
    <div class="text-center table_section">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã</th>
                    <th>Tên</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.DSLoaihang != null && Model.DSLoaihang.Length > 0)
                {
                    int j = Model.NoStart - 1;
                    for (int i = Model.NoStart; i <= Model.NoEnd; i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@Model.DSLoaihang[j].MaSo</td>
                            <td>@Model.DSLoaihang[j].Ten</td>
                            <td>
                                <a class="btn btn-sm btn-warning text-light" href="/LoaiHang/MH_LoaiHang_Sua?id=@Model.DSLoaihang[j].MaSo" role="button">Sửa</a>
                                <a class="btn btn-sm btn-danger text-light" href="/LoaiHang/MH_LoaiHang_Xoa?id=@Model.DSLoaihang[j].MaSo" role="button">Xóa</a>
                            </td>
                        </tr>
                        j++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center fw-bold">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

   <div class="row table_pagination">
        @if (Model.DSLoaihang != null && Model.DSLoaihang.Length > 0)
        {
            <div class="col-9">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= Model.PageTotal; i++)
                        {
                            if (i == Model.PageIndex)
                            {
                                <li class="page-item active"><a class="page-link" href="/LoaiHang/MH_LoaiHang_DanhSach?search=@Model.SKeyword&page=@i">@i</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="/LoaiHang/MH_LoaiHang_DanhSach?search=@Model.SKeyword&page=@i">@i</a></li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
